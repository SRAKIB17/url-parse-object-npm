{
  "compilerOptions": {
    // tsc select.ts --target es6
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./test-directory",
    "lib": [
      "ES2022.Object",
      "ES2022",
      "ES2022.intl"
    ]
  },
  "include": [
    "test-directory"
  ],
  "exclude": [
    "test-directory"
  ],
  "compileOnSave": true,
}